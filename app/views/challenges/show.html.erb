<h1><%= @challenge.title %></h1>

<p><%= @challenge.description %></p>

<% if @challenge.user == current_user %>
  <ul>
    <li><%= link_to "Edit", edit_challenge_path(@challenge) %></li>
    <li><%= link_to "Destroy", challenge_path(@challenge), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %></li>
  </ul>
<% end %>
