<div class="login">
	<div class="container">
		<div class="form">
			<h1>log in</h1>
			<%= form_for(:session, url: login_path) do |f| %> 
				<div class="form-field">
					<%= f.email_field :email, :placeholder => "Email", class: "form-input" %>
				</div>
				<div class="form-field">
					<%= f.password_field :password, :placeholder => "Password", class: "form-input" %>
				</div>
				<div class="form-field">
					<%= f.submit "Log in", class: "btn-submit" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
